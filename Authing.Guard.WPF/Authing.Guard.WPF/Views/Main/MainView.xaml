<controls:BaseGuardControl
    x:Class="Authing.Guard.WPF.Views.LoginView.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Authing.Guard.WPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:login="clr-namespace:Authing.Guard.WPF.Views.LoginView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <Image
                x:Name="imgLogo"
                Width="50"
                Height="50" />
            <TextBlock x:Name="tbTitle" Text="Authing" />
        </StackPanel>
        <Grid HorizontalAlignment="Right">
            <ToggleButton
                x:Name="btnSwitchLogin"
                Click="btnSwitchLogin_Click"
                Content="切换登录" />
        </Grid>
        <Grid x:Name="LoginContent" Grid.Row="1">
            <Grid x:Name="moreLoginGrid">
                <TabControl x:Name="loginViewTabControl" Style="{StaticResource TabControlStyle}">
                    <!--<TabItem Header="密码登录">
                        <login:PasswordLoginView></login:PasswordLoginView>
                    </TabItem>
                    <TabItem Header="短信验证码登录">
                        <login:SMSCodeLoginView></login:SMSCodeLoginView>
                    </TabItem>-->
                </TabControl>
            </Grid>
            <Grid x:Name="QRCodeLoginGrid" />
        </Grid>
        <Grid x:Name="ThirdCottent" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid>
                <TextBlock Text="第三方账号登录" />
            </Grid>
            <Grid Grid.Row="1">
                <ListBox />
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <ToggleButton x:Name="switchLanguage" Content="English" />
        </Grid>
    </Grid>
</controls:BaseGuardControl>
