<UserControl x:Class="Authing.Guard.WPF.Controls.Icon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Authing.Guard.WPF.Controls"
             mc:Ignorable="d" IsHitTestVisible="False"
             d:DesignHeight="40" d:DesignWidth="40" x:Name="icon">
    <UserControl.Resources>
        <ResourceDictionary Source="../Styles/IconStyles.xaml" />
    </UserControl.Resources>
    <UserControl.Style>
        <Style TargetType="UserControl">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Style>
    <Grid>
        <Viewbox Width="{Binding ElementName=icon,Path=ImageWidth}" Height="{Binding ElementName=icon,Path=ImageHeight}">
            <Button Style="{StaticResource Blank}" x:Name="btn"></Button>
        </Viewbox>
    </Grid>
</UserControl>