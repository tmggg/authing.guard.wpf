<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Authing.Guard.WPF.Controls">

    <Style TargetType="controls:PlaceHolderTextBox">
        <Setter Property="PlaceHolderFontSize" Value="12"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:PlaceHolderTextBox">
                    <Grid>
                        <Border></Border>
                        <controls:Icon Type="Account"></controls:Icon>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>