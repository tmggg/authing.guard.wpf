<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=System.Runtime"
                    xmlns:converters="clr-namespace:Authing.Guard.WPF.Converters">
    <system:Double x:Key="DefaultControlMinHeight">30</system:Double>
    <system:Double x:Key="DefaultControlMinWidth">100</system:Double>
    <Thickness x:Key="DefaultControlPadding">10,6</Thickness>
    <Thickness x:Key="DefaultInputPadding">8,0</Thickness>
    <Thickness x:Key="OutBorderThickness">2</Thickness>
    <Thickness x:Key="InBorderThickness">1</Thickness>
    <CornerRadius x:Key="DefaultCornerRadius">4</CornerRadius>
    <Style TargetType="Control">
        <Setter Property="SnapsToDevicePixels" Value="True"></Setter>
    </Style>
    <converters:Boolean2VisibilityConverter x:Key="Boolean2VisibilityConverter" />
</ResourceDictionary>